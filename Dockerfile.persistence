# Dockerfile for Persistence Consumer
FROM golang:1.25.1-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the persistence consumer
RUN CGO_ENABLED=0 GOOS=linux go build -o persistence-consumer ./consumers/persistence

FROM alpine:latest

RUN apk --no-cache add ca-certificates
WORKDIR /root/

# Copy the binary
COPY --from=builder /app/persistence-consumer .

CMD ["./persistence-consumer"]
