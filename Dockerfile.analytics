# Dockerfile for Analytics Consumer
FROM golang:1.25.1-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the analytics consumer
RUN CGO_ENABLED=0 GOOS=linux go build -o analytics-consumer ./consumers/analytics

FROM alpine:latest

RUN apk --no-cache add ca-certificates
WORKDIR /root/

# Copy the binary
COPY --from=builder /app/analytics-consumer .
COPY --from=builder /app/.env .

CMD ["./analytics-consumer"]
