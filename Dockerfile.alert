# Dockerfile for Alert Consumer
FROM golang:1.25.1-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the alert consumer
RUN CGO_ENABLED=0 GOOS=linux go build -o alert-consumer ./consumers/alert

FROM alpine:latest

RUN apk --no-cache add ca-certificates
WORKDIR /root/

# Copy the binary
COPY --from=builder /app/alert-consumer .

CMD ["./alert-consumer"]
